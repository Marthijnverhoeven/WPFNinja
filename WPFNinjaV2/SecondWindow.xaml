<Window x:Class="WPFNinjaV2.SecondWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.ignore.com"
        mc:Ignorable="d ignore"
        Height="599"
        Width="1200"
        Title="WPFNinjaV2"
        Closing="Window_Closing"
        DataContext="{Binding EquipmentItem, Source={StaticResource Locator}}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Skins/MainSkin.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <StackPanel Margin="0,0,0,7">
        <Grid Height="597">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="593" />
                <ColumnDefinition  />
                <ColumnDefinition Width="29" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="33" />
                <RowDefinition Height="168" />
                <RowDefinition Height="31" />
                <RowDefinition Height="34" />
                <RowDefinition Height="331" />
            </Grid.RowDefinitions>

            <!--
            <TextBlock Text="Id:" Grid.Column="0" Grid.Row="0" />
            <Label  Grid.Column="1" Grid.Row="0" Content="{Binding Path=SelectedSong.Id, Mode=TwoWay}" />

            <TextBlock Text="Artist:" Grid.Column="0" Grid.Row="1" />
            <Label  Grid.Column="1" Grid.Row="1"  Content="{Binding Path=SelectedSong.Artist, Mode=TwoWay}" />

            <TextBlock Text="Title:" Grid.Column="0" Grid.Row="2" />
            <Label  Grid.Column="1" Grid.Row="2"  Content="{Binding Path=SelectedSong.Title, Mode=TwoWay}" />
            -->

            <Button Content="Buy" Command="{Binding BuyItemCommand}" Width="100"  HorizontalAlignment="Left" Grid.Column="0" Grid.Row="2" Margin="5,0,0,2"/>
            <Button Content="Equip" Command="{Binding AddToLoadoutCommand}" Width="100"  HorizontalAlignment="Left"  Grid.Row="2" Margin="10,0,0,2" Grid.Column="1"/>
            <Button Content="Delete" Command="{Binding RemoveInventoryItemCommand}" Width="100"  HorizontalAlignment="Left"  Grid.Row="2" Margin="115,0,0,2" Grid.Column="1"/>
            <DataGrid AutoGenerateColumns="False" IsReadOnly="True" SelectedItem="{Binding SelectedItem}" ItemsSource="{Binding items}" Margin="5,0,10,10" Grid.Row="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="type" Binding="{Binding type}" Width="70" />
                    <DataGridTextColumn Header="name" Binding="{Binding name}" Width="*" />
                    <DataGridTextColumn Header="intelligence" Binding="{Binding intelligence}" Width="60" />
                    <DataGridTextColumn Header="strength" Binding="{Binding strength}" Width="60" />
                    <DataGridTextColumn Header="agility" Binding="{Binding agility}" Width="60" />
                    <DataGridTextColumn Header="price" Binding="{Binding price}" Width="60" />
                </DataGrid.Columns>
            </DataGrid>
            <DataGrid AutoGenerateColumns="False" IsReadOnly="True" SelectedItem="{Binding SelectedInventoryItem}" ItemsSource="{Binding inventory}" Margin="10,0,0,10" SelectionChanged="DataGrid_SelectionChanged" Grid.Column="1" Grid.Row="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="type" Binding="{Binding type}" Width="70" />
                    <DataGridTextColumn Header="name" Binding="{Binding name}" Width="*" />
                    <DataGridTextColumn Header="intelligence" Binding="{Binding intelligence}" Width="60" />
                    <DataGridTextColumn Header="strength" Binding="{Binding strength}" Width="60" />
                    <DataGridTextColumn Header="agility" Binding="{Binding agility}" Width="60" />
                    <DataGridTextColumn Header="price" Binding="{Binding price}" Width="60" />
                </DataGrid.Columns>
            </DataGrid>
            <TextBlock FontSize="28" Margin="6,-5,0,0" ><Run Text="Shop"/><Run Text="&#x9;&#x9;&#x9;&#x9;&#x9;     "/></TextBlock>
            <TextBlock Text="Inventory" FontSize="28" Margin="10,-5,-603,0" Grid.ColumnSpan="2" Grid.Column="1" />
            <DataGrid AutoGenerateColumns="False" IsReadOnly="True" ItemsSource="{Binding loadouts}" SelectedItem="{Binding SelectedLoadoutItem}" Margin="10,8,0,78" SelectionChanged="DataGrid_SelectionChanged" Grid.Column="1" Grid.Row="4">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="name" Binding="{Binding name}" Width="*" />
                    <DataGridTextColumn Header="intelligence" Binding="{Binding intelligence}" Width="80" />
                    <DataGridTextColumn Header="strength" Binding="{Binding strength}" Width="80" />
                    <DataGridTextColumn Header="agility" Binding="{Binding agility}" Width="80" />
                    <DataGridTextColumn Header="value" Binding="{Binding value}" Width="80" />
                </DataGrid.Columns>
            </DataGrid>
            <TextBlock FontSize="28" Margin="10,0,-603,0" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="3" ><Run Text="Loadout"/><Run Text="s"/></TextBlock>
            <Grid Margin="10,10,10,73" Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="200" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>

                <!--<TextBlock Text="id:" Grid.Column="0" Grid.Row="0" />
            <TextBox MaxLength="5" Grid.Column="1" Grid.Row="0" Text="{Binding Path=SelectedItem.id, Mode=TwoWay}" />-->

                <TextBlock Text="name:" Grid.Column="0" />
                <TextBox MaxLength="50" Grid.Column="1"  Text="{Binding SelectedLoadoutItem.name, Mode=TwoWay}"/>

                <TextBlock Text="Head:" Grid.Column="0" Grid.Row="1" />
                <TextBlock Grid.Column="1" Grid.Row="1"  Text="{Binding SelectedLoadoutItem.head.name}" />


                <!--<ComboBox ItemsSource="{Binding id}" SelectedItem="{Binding SelectedItem.id}"/>-->

                <TextBlock Text="Shoulders:" Grid.Column="0" Grid.Row="2" />
                <TextBlock Grid.Column="1" Grid.Row="2"  Text="{Binding SelectedLoadoutItem.shoulders.name}" />

                <TextBlock Text="Chest:" Grid.Column="0" Grid.Row="3" />
                <TextBlock Grid.Column="1" Grid.Row="3"  Text="{Binding SelectedLoadoutItem.chest.name}"/>

                <TextBlock Text="Belt:" Grid.Column="0" Grid.Row="4" />
                <TextBlock Grid.Column="1" Grid.Row="4"  Text="{Binding SelectedLoadoutItem.belt.name}"/>

                <TextBlock Text="Legs:" Grid.Column="0" Grid.Row="5" />
                <TextBlock Grid.Column="1" Grid.Row="5"  Text="{Binding SelectedLoadoutItem.legs.name}"/>

                <TextBlock Text="Boots:" Grid.Column="0" Grid.Row="6" />
                <TextBlock Grid.Column="1" Grid.Row="6"  Text="{Binding SelectedLoadoutItem.boots.name}"/>
                <TextBlock Text="Money:" Grid.Column="1" Margin="341,-266,-189,280" RenderTransformOrigin="1.306,0.484" />
                <TextBlock Grid.Column="1"  Text="{Binding SelectedNinja.money}" Margin="390,-266,-287,280"/>
                <Button Content="Clear Head" Command="{Binding DeleteLoadoutHeadCommand}" Width="100"  HorizontalAlignment="Left"  Grid.Row="1" Margin="5,0,0,4" Grid.Column="2"/>
                <Button Content="Clear Shoulders" Command="{Binding DeleteLoadoutShouldersCommand}" Width="100"  HorizontalAlignment="Left"  Grid.Row="2" Margin="5,0,0,4" Grid.Column="2"/>
                <Button Content="Clear Chest" Command="{Binding DeleteLoadoutChestCommand}" Width="100"  HorizontalAlignment="Left"  Grid.Row="3" Margin="5,1,0,3" Grid.Column="2"/>
                <Button Content="Clear Belt" Command="{Binding DeleteLoadoutBeltCommand}" Width="100"  HorizontalAlignment="Left"  Grid.Row="4" Margin="5,0,0,4" Grid.Column="2"/>
                <Button Content="Clear Legs" Command="{Binding DeleteLoadoutLegsCommand}" Width="100"  HorizontalAlignment="Left"  Grid.Row="5" Margin="5,0,0,4" Grid.Column="2"/>
                <Button Content="Clear Boots" Command="{Binding DeleteLoadoutBootsCommand}" Width="100"  HorizontalAlignment="Left"  Grid.Row="6" Margin="5,0,0,4" Grid.Column="2"/>
            </Grid>
            <Button Content="New" Command="{Binding ClearLoadoutCommand}" Width="100"  HorizontalAlignment="Left"  Grid.Row="4" Margin="10,258,0,46"/>
            <Button Content="Save" Command="{Binding SaveLoadoutCommand}" Width="100"  HorizontalAlignment="Left"  Grid.Row="4" Margin="115,258,0,46"/>
            <TextBlock FontSize="28" Margin="10,3,-10,328" Grid.ColumnSpan="3" Grid.Row="3" Grid.RowSpan="2" Text="Current Loadout" />
            <Button Content="Delete" Command="{Binding DeleteLoadoutCommand}" Width="100"  HorizontalAlignment="Left"  Grid.Row="4" Margin="10,258,0,46" Grid.Column="1"/>
        </Grid>



    </StackPanel>


</Window>
